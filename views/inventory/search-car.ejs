<% if (title) { %>
    <h1 style="grid-column: 1 / 3;"><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>
    
    <!-- A Message -->
    
    <%- messages() %>
    
    <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>

<label for="searchbar">Searchbar <input type="text" id="searchbar" name="searchbar" style="border: 2px solid black;"></label>

<table id="search-items" style="grid-column: 1 / 3;"></table>

<script src="../../js/search.js"></script>