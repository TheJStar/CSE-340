<!-- Content Heading -->

<% if (title) { %>
<h1 style="grid-column: 1 / 3;"><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<!-- A Message -->

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
    <%  }) %>
    </ul>
    <% } %>

<h2 style="grid-column: 1 / 3;">Welcome <%= accountData.account_firstname %></h2>
<a href=<%= "/account/update/" + accountData.account_id %>>Update account info</a>

<% if (accountData.account_type == "Admin" || accountData.account_type == "Employee") { %>
    <h3 style="grid-column: 1 / 3;">Inventory Management</h3>
    <p><a href="/inv">Edit inventory</a></p>
<% } else { %>
    
<% } %>