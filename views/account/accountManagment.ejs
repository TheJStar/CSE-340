<!-- Content Heading -->

<% if (title) { %>
<h1 style="grid-column: 1 / 3;"><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<!-- A Message -->

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
    <%  }) %>
    </ul>
    <% } %>

      
<p>You have logged in</p>

